<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="3dp"
    android:background="@color/colorItem"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titreTontine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/privateTontine"
        android:text="Titre tontine"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeMaxTextSize="25sp"
        app:autoSizeStepGranularity="1sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/deviseTontine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_below="@+id/titreTontine"
        android:layout_toStartOf="@+id/favoriteTontine"
        android:layout_alignParentStart="true"
        android:text="Description tontine"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeMaxTextSize="18sp"
        app:autoSizeStepGranularity="3sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/privateTontine"
        android:layout_marginStart="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:src="@drawable/ic_action_private"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/favoriteTontine"
        android:layout_marginStart="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:src="@drawable/ic_action_favorite"
        android:layout_below="@+id/privateTontine" />

</RelativeLayout>