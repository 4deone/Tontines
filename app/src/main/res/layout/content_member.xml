<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:overScrollMode="never"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <RelativeLayout
        android:id="@+id/memberHeader"
        android:padding="10dp"
        android:layout_below="@+id/showMemmberToolbar"
        android:background="#abcdef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/member_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvBureauMembre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_below="@+id/tvMemberName"
            android:textColor="@color/black"
            android:text="Membre"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry,SmallSp" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_below="@+id/tvBureauMembre"
            android:textColor="@color/black"
            android:text="+237677665544"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry,SmallSp" />

        <TextView
            android:id="@+id/tvCni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_below="@+id/tvPhone"
            android:textColor="@color/black"
            android:text="CNI N° 1147552455  du 15/07/2021"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry,SmallSp" />

        <TextView
            android:id="@+id/tvAnciennete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:layout_below="@+id/tvCni"
            android:textColor="@color/black"
            android:text="Ancienneté 2 ans"
            android:textSize="10sp"
            tools:ignore="RtlSymmetry,SmallSp" />

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>